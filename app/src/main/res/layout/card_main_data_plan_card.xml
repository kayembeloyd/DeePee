<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/my_white"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/my_green"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Data plan name"
                    android:textColor="@color/my_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/data_plan_active_indicator_shape"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:text="Active"
                    android:textAllCaps="true"
                    android:textColor="@color/my_grey"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/my_green_black"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/dp_data_plan_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="2dp"
                android:text="Mobile Data plan"
                android:textColor="@color/my_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dp_data_used_total_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="75mb of 1024mb used"
                android:textColor="@color/my_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dp_time_remaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="2 days remaining 14hr 24min"
                android:textColor="@color/my_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dp_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="27-Jan-2021"
                android:textColor="@color/my_black"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>